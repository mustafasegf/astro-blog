---
import FormattedDate from "@components/FormattedDate.astro";

const today: Date = new Date();

interface Props {
	buildDate: Date;
}

const { buildDate } = Astro.props;
import { Twitter, Github } from "lucide-astro";
import { TWITTER_HANDLE } from "@src/consts";
---

<footer transition:persist class="bg-gradient-to-br p-4 pb-16 pt-16 text-center text-gray-500">
	&copy; {today.getFullYear()} Mustafa Zaki Assagaf. All rights reserved. Built at <FormattedDate date={buildDate} includeTime={true} />.

	<div class="mt-4 flex justify-center space-x-4">
		<a href={`https://twitter.com/${TWITTER_HANDLE}`} target="_blank" class="text-gray-500 hover:text-gray-700">
			<span class="sr-only">Follow Me on Twitter</span>
			<Twitter size={32} />
		</a>

		<a href="https://github.com/mustafasegf" target="_blank" class="text-gray-500 hover:text-gray-700">
			<span class="sr-only">Follow Astro on Github</span>
			<Github size={32} />
		</a>
	</div>
</footer>
